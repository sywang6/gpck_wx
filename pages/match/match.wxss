/* pages/match/match.wxss */
.page{
  padding-top:20rpx;
}
button{
  display: inline-block;
}
image{
  display: block;
  margin:0 auto;
}
.tip{
  color:#4a90e2;
  text-align: center;
}
.wrap{
  width:100%;
  height: 300rpx;
}
.left{
  float: left;
}
.left image{
  width:300rpx;
  height:300rpx;
}
.right{
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.right image{
  width:200rpx;
  height:100rpx;
}
.reDraw{
  position:relative;
  top:50rpx;
  color:#4a90e2;
}
.reDraw text{
  position:absolute;
  top:20rpx;
  left:80rpx;
}
.search view{
  width:450rpx;
  margin:0 auto;
  margin-top: 32rpx;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}
.key{
  background-color: #4a90e2;
   color:#fff;
}
.last{
   background-color: #fff;
   border: 2px solid #4a90e2;
   color:#4a90e2;
}